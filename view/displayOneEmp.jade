extends ./layout.jade

block title
  title Home

block content
       center 
            table(bgcolor="#32A0B9" width="50%")
                tr
                    td(style="font-family:  Georgia, serif;color:white;")
                        center 
                            b 
                                font(size="6") Employee Information
                        br
                tr
                    td(style="font-family:  Georgia, serif;")
                        center
                            table(bgcolor="#B9D5DC")
                                tr
                                    td
                                        br
                                each item in result
                                    tr
                                        td(nowrap)
                                            b Employee Id 
                                        td
                                            font(style="color: white")  :   #{item.emp_id}
                                    tr
                                        td(nowrap)
                                            b Employee Name
                                        td 
                                            font(style="color: white")  :   #{item.emp_name}
                                    tr
                                        td(nowrap)
                                            b Gender
                                        td
                                            font(style="color: white")  :   #{item.emp_gen}
                                    tr
                                        td(nowrap)
                                            b Date of Birth
                                        td
                                            font(style="color: white")  :   #{item.dob}
                                    tr
                                        td(nowrap)
                                            b Primary Email
                                        td
                                            font(style="color: white")  :   #{item.p_email}
                                    tr
                                        td(nowrap)
                                            b Secondary Email
                                        td
                                            font(style="color: white")  :   #{item.s_email}
                                    tr
                                        td(nowrap)
                                            b Phone Number
                                        td
                                            font(style="color: white")  :   #{item.phone_number}
                                    tr
                                        td(nowrap)
                                            b Skill Set
                                        td
                                            font(style="color: white")  :   #{item.skills}
                                    tr
                                        td(nowrap)
                                            b Total Experience :
                                        td
                                            font(style="color: white")  :   #{item.tot_exp_yr} Years and #{item.tot_exp_mon} Months
                                    tr
                                        td(nowrap)
                                            b Image:
                                        td
                                            img(src='/images/'+item.image_name, alt="Image File" ,height="90px" , width="90px" ,position="fixed")
                                    tr
                                        td(nowrap)
                                            b Resume:
                                        td
                                            a(href='/resume/'+item.file_name, alt="Resume File" ,height="90px" , width="90px" ,position="fixed") Resume

                                tr
                                    td
                                        br
                tr
                    td 
                        br
                tr
                    td(colspan="9")
                        center
                            form(action="/searchInfo", method="get")
                                 p: button(type="submit" style="font-family:  Georgia, serif;color:#32A0B9;") 
                                    b Search
                                    
                        center
                            form(action="/", method="get")
                                p: button(type="submit" style="font-family:  Georgia, serif;color:#32A0B9;") 
                                    b Home